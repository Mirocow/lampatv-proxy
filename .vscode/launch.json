{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Flask Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py", // Укажите путь к вашему main файлу
            "console": "integratedTerminal",
            "env": {
                "FLASK_DEBUG": "1"
            }
        },
        {
            "name": "Python Debugger: Debug Flask Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal"
        }
    ]
}
